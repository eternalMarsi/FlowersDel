{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ConnectionStrings": {
    "UserContext": "Data Source=.;Initial Catalog=identity_user;Integrated Security=True"
  },

  "CryptoService": {
    "GlobalSalt": "my-secret-key",
    "TokenSecurityToken": "security-token-very-long-and-safe",
    "RegistrationSecurityToken": "registration-security-token",
    "TokenSettings": {
      "Issuer": "FlowerDel",
      "VerifyUser": true,
      "Audience": "FlowerDel-Client",
      "VerifyAudience": true,
      "LifeTime": 20,
      "VerifyLifeTime" :  true 
    }
  },

  "AllowedHosts": "*"
}
